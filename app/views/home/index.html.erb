<h1>Pokemon Dictionary</h1>
<div class="columns">

  <div class="column">
    <% @pokemons.each do |p| %>
      <%= render partial: 'pokemons/pokemon', locals: {pokemon: p} %>
    <% end %>
  </div>

  <div class="column">
    <% @regions.each do |r| %>
      <%= link_to r.name, r %>
    <% end %>
  </div>

  <div class="column">
    <% @types.each do |t| %>
        <%= link_to t.name, t %>
    <% end %>
  </div>

  <div class="column">
    <% @abilities.each do |a| %>
      <%= link_to a.name, a %>
    <% end %>
  </div>

</div>
