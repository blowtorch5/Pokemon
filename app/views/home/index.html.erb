<section class="hero is-info">

  <div class="hero-body">
    <h1 class="title">Pok√©mon Dictionary</h1>
  </div>

</section>

<div class="columns">

  <div class="column is-half">
    <ul>
      <% @pokemons.each do |p| %>
        <li class="mb-5">
          <%= render partial: 'pokemons/pokemon', locals: {pokemon: p} %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="column">
    <div class="box">
      <ul>
        <% @regions.each do |r| %>
          <li>
            <strong>
              <%= link_to r.name, r, class: "button is-medium is-fullwidth" %>
            </strong>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="column">
    <div class="box">
      <ul>
        <% @types.each do |t| %>
          <li>
            <strong>
              <%= link_to t.name, t, class: "button is-medium is-fullwidth" %>
            </strong>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="column">
    <div class="box">
      <ul>
        <% @abilities.each do |a| %>
          <li>
            <strong>
              <%= link_to a.name, a, class: "button is-medium is-fullwidth" %>
            </strong>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

</div>
